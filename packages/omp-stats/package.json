{
	"name": "@oh-my-pi/omp-stats",
	"version": "0.1.0",
	"description": "Local observability dashboard for pi AI usage statistics",
	"type": "module",
	"main": "./src/index.ts",
	"types": "./src/index.ts",
	"bin": {
		"omp-stats": "./src/index.ts"
	},
	"exports": {
		".": {
			"types": "./src/index.ts",
			"import": "./src/index.ts"
		},
		"./src/server": {
			"types": "./src/server.ts",
			"import": "./src/server.ts"
		},
		"./src/db": {
			"types": "./src/db.ts",
			"import": "./src/db.ts"
		}
	},
	"files": [
		"src",
		"public"
	],
	"scripts": {
		"dev": "bun run src/index.ts",
		"check": "tsgo --noEmit",
		"build": "tsgo -p tsconfig.build.json"
	},
	"author": "Can Bölük",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/can1357/oh-my-pi.git",
		"directory": "packages/omp-stats"
	},
	"dependencies": {
		"@oh-my-pi/pi-ai": "workspace:*"
	},
	"devDependencies": {
		"@types/node": "^24.3.0"
	},
	"engines": {
		"bun": ">=1.0.0"
	}
}
